<h1>Trainers Database</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Title</th>
      <th>Payment rate</th>
      <th>Club represented</th>
      <th>Qualification</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Home district</th>
      <th>Work district</th>
      <th>Status</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= trainer.first_name %></td>
        <td><%= trainer.last_name %></td>
        <td><%= trainer.title %></td>
        <td><%= trainer.payment_rate %></td>
        <td><%= trainer.club_represented %></td>
        <td><%= trainer.qualification %></td>
        <td><%= trainer.email %></td>
        <td><%= trainer.mobile %></td>
        <td><%= trainer.home_district %></td>
        <td><%= trainer.work_district %></td>
        <td><%= trainer.status %></td>
        <td><%= trainer.note %></td>
        <td><%= link_to 'Show', trainer %></td>
        <td><%= link_to 'Edit', edit_trainer_path(trainer) %></td>
        <td><%= link_to 'Destroy', trainer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

