<%= simple_form_for(@trainer) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :title %>
      <%= f.input :payment_rate %>
      <%= f.input :club_represented %>
      <%= f.input :qualification %>
      <%= f.input :email %>
      <%= f.input :mobile %>
      <%= f.input :home_district %>
      <%= f.input :work_district %>
      <%= f.input :status %>
      <%= f.input :note %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
