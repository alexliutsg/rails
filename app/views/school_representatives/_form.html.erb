<%= simple_form_for(@school_representative) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :school_id %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :title %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
