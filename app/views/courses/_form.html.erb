<%= simple_form_for(@course) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :school_id %>
      <%= f.input :course_code %>
      <%= f.input :acronym %>
      <%= f.input :district %>
      <%= f.input :contact_person %>
      <%= f.input :pic %>
      <%= f.input :trainer_id %>
      <%= f.input :first_lesson_date %>
      <%= f.input :last_lesson_date %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
