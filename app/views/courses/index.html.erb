<h1>Courses Database</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>School</th>
      <th>Course code</th>
      <th>Acronym</th>
      <th>District</th>
      <th>Contact person</th>
      <th>Pic</th>
      <th>Trainer</th>
      <th>First lesson date</th>
      <th>Last lesson date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.school_id %></td>
        <td><%= course.course_code %></td>
        <td><%= course.acronym %></td>
        <td><%= course.district %></td>
        <td><%= course.contact_person %></td>
        <td><%= course.pic %></td>
        <td><%= course.trainer_id %></td>
        <td><%= course.first_lesson_date %></td>
        <td><%= course.last_lesson_date %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
