<h1>All Organizations</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Region</th>
      <th>Type</th>
      <th>Primary name</th>
      <th>Alternative names</th>
      <th>Address</th>
      <th>Contact numbers</th>
      <th>Email</th>
      <th>Fax numbers</th>
      <th>Website</th>
      <th>Contact persons</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.region.name %></td>
        <td>
          <button type="button" class="btn btn-primary btn-xs"><%= organization.organization_type %></button>
        </td>
        <td><%= organization.primary_name %></td>
        <td><%= organization.alternative_names %></td>
        <td><%= organization.address %></td>
        <td><%= organization.contact_numbers %></td>
        <td><%= organization.email %></td>
        <td><%= organization.fax_numbers %></td>
        <td><%= organization.website %></td>
        <td><%= organization.contact_persons %></td>
        <td><%= organization.remarks %></td>
        <td><%= link_to 'Show', organization %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

