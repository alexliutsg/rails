<%= simple_form_for(@school_time_slot) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :school_id %>
      <%= f.input :date %>
      <%= f.input :start_time %>
      <%= f.input :end_time %>
      <%= f.input :status %>
      <%= f.input :remarks %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
