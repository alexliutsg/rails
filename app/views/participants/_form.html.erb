<%= simple_form_for(@participant) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :school_id %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :mobile %>
      <%= f.input :gender %>
      <%= f.input :age %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
